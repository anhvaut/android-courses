<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width_extra"
    android:background="@drawable/ic_user_background"
    android:orientation="horizontal">

    <com.example.creators.danhgiahocphan.ui.RoundedImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/height_large"
        android:layout_height="@dimen/height_large"
        android:layout_gravity="center"
        android:src="@drawable/ic_no_user"
        android:layout_marginLeft="@dimen/margin_short"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_short">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#161515"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@+id/textName"
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#161515"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />


    </RelativeLayout>


</LinearLayout>
