<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/margin_very_short"
    card_view:cardElevation="@dimen/margin_very_short"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/itemSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/height_normal"
            android:layout_height="@dimen/height_normal"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/padding_short" />


        <LinearLayout
            android:id="@+id/linear_layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_short"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_extra_large"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_short"
            android:orientation="vertical">

            <ImageButton
                android:layout_margin="@dimen/margin_short"
                android:id="@+id/img_button_next"
                android:layout_width="@dimen/height_normal"
                android:layout_height="@dimen/height_normal"
                android:background="@drawable/ic_next" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>