<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large">

        <ImageView
            android:id="@+id/imgAvatarTeacher"
            android:layout_width="@dimen/height_normal"
            android:layout_height="@dimen/height_normal"
            android:layout_gravity="center"
            android:background="@color/color_white"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:gravity="bottom"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_short"
                android:background="@color/color_background_item_subject"
                android:id="@+id/tvTenGiangVien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Test"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_size_extra_large" />
            <LinearLayout
                android:background="@color/color_background_item_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="@dimen/padding_short"
                    android:background="@color/color_background_item_subject"
                    android:gravity="top"
                    android:id="@+id/tvTotalLikeGV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5 thích"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/text_size_medium" />
                <TextView
                    android:paddingLeft="@dimen/padding_short"
                    android:background="@color/color_background_item_subject"
                    android:gravity="top"
                    android:id="@+id/tvTotalCmtGV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5 bình luận"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>