<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huynhle.tim_tro.Activity.chi_tiet_room">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/viewPager"
        ></android.support.v4.view.ViewPager>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip">
            <TextView
                android:textSize="18.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="Thông tin chi tiết"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <ImageButton
                android:background="@drawable/button_linnearlayout_selector"
                android:visibility="gone"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:src="@drawable/content_edit"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <ImageButton
                android:background="@drawable/button_linnearlayout_selector"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:src="@drawable/ic_report"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View android:background="#ffe1e1e1"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="15.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="15.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:src="@drawable/no_avata"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_marginLeft="70dp"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Lê Văn Huỳnh"
                    android:textSize="15.0dip" />

                <TextView
                    android:layout_marginLeft="70dp"
                    style="@style/textSmallGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="32 phut truoc" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="Address"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:text="dientich"
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="1 trieu" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: " />
            <TextView
                android:gravity="center_vertical"
                android:autoLink="all"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:text="mobile" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:lineSpacingMultiplier="1.3" />
    </LinearLayout>

        <View android:background="@color/googlexam"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btn1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:button="@drawable/like_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Thích" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="0"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="wrap_content"
                android:background="@color/googlexam" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btn1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/ic_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Chia sẻ" />
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="wrap_content"
                android:background="@color/googlexam"
                android:paddingTop="10.0dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/save_bookmark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Lưu" />
            </LinearLayout>
    </LinearLayout>


    </LinearLayout>


</ScrollView>
