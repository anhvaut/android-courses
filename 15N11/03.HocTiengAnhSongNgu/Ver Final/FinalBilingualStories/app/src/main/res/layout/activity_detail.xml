<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pic"
    android:weightSum="25"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/tvEngTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/pic3"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="sdfvjfwfjkwefjwefwefwefewf"
        android:paddingTop="12dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvVieTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Æ°efwefwefwefewfwefwefewfewf"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:paddingBottom="5dp"
        android:background="@drawable/pic3"/>

    <TextView
        android:id="@+id/tvEngStory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="9"
        android:background="@drawable/pic3"
        android:gravity="center_vertical"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvVieStory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="9"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/pic3"
        android:gravity="center_vertical"
        android:padding="7dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3.5"
        android:background="@drawable/pic3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="PLAY AUDIO"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/pause"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/play" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
